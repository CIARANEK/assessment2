        <Label x:Name="lblbookRef" Content="" HorizontalAlignment="Left" Height="30" Margin="165,167,0,0" VerticalAlignment="Top" Width="126"/>
        <TextBox x:Name="txtGuests" HorizontalAlignment="Left" Height="24" Margin="165,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtArrivalDate" HorizontalAlignment="Left" Height="24" Margin="165,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtDepartureDate" HorizontalAlignment="Left" Height="24" Margin="165,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>

    </Grid>
</Window>
