        <Label Content="Departure Date" HorizontalAlignment="Left" Height="30" Margin="0,95,0,0" VerticalAlignment="Top" Width="126"/>
        <Label Content="Booking Reference Number" HorizontalAlignment="Left" Height="30" Margin="0,167,0,0" VerticalAlignment="Top" Width="160"/>
        <Button x:Name="btnAmend" Content="Amend" HorizontalAlignment="Left" Height="45" Margin="0,306,0,0" VerticalAlignment="Top" Width="117"/>
